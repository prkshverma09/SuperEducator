{
  "manifest_version": 3,
  "name": "Text Selection Reader",
  "version": "1.0.0",
  "description": "Read and display selected text from any webpage",
  "permissions": ["activeTab", "scripting", "sidePanel"],
  "action": {
    "default_title": "Open Text Reader"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
